<% icon_sizes = [32, 48, 72, 128, 192, 256, 512] %>
{
  "name": "Nuita",
  "short_name": "Nuita",
  "start_url": "/",
  "icons": [
  <% icon_sizes.map { |s| "#{s}x#{s}" }.each.with_index do |dim, i| %>
    {
      "src": "<%= image_path "serviceworker-rails/icon-#{dim}.png" %>",
      "sizes": "<%= dim %>",
      "type": "image/png",
      "purpose": "maskable any"
    }<%= i == (icon_sizes.length - 1) ? '' : ',' %>
  <% end %>
  ],
  "theme_color": "#5FC10C",
  "background_color": "#5FC10C",
  "display": "standalone",
  "orientation": "portrait"
}
